<% if signed_in? %>
  <div class="row-fluid">
    <%= form_for(@message) do |f| %>
  <%= render 'shared/error_messages', object: @message %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>
      
    
  </div>  
<% else %>

<div class="center jumbotron">
  <h1>Bugl is Calling!</h1>

  <h2>
    You can feel free to put a great tagline here!
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
</div>

<div class="center well">

	<%= link_to "Create an Account", "#", class: "btn btn-large btn-primary" %> <br>
	<%= link_to "Forgot Your Username or Password?", "#", class: "btn btn-large btn-primary" %>

	</div>
	<% end %>